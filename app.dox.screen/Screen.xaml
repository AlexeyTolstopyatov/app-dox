<Window x:Class="app.dox.screen.Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.dox.screen"
        WindowStyle="None"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="Screen" Height="200" Width="400">
    <Window.Clip>
        <RectangleGeometry Rect="0,0,400,200" RadiusX="10" RadiusY="10"/>
    </Window.Clip>

    <Grid Background="#FF42A7FF">
        <Image x:Name="DoxLogo" HorizontalAlignment="Left" Height="120" Margin="27,39,0,0" VerticalAlignment="Top" Width="115" Stretch="Fill"/>
        <TextBlock x:Name="SaverText" HorizontalAlignment="Left" Margin="163,75,0,0" TextWrapping="Wrap" Text="Открытие " VerticalAlignment="Top" Height="84" Width="213" FontSize="14" Foreground="White"/>
        <Label Content="Cute Dox 1.2" HorizontalAlignment="Left" Margin="163,39,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="Consolas" FontSize="22">
            <Label.Effect>
                <DropShadowEffect BlurRadius="10"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
